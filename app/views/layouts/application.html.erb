
<html>
  <head>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
    
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display|Raleway:500" rel="stylesheet">
    
    <meta name="keywords" content="<%= @seo_keywords %>" />
    
    <%= favicon_link_tag 'favicons/favicon.ico' %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
  <%= render "shared/application_nav" %>
   <div class="site-wrapper">
      <div class="site-wrapper-inner">
        <div class="cover-container">
          
          <%# video_tag(
               'Stars.mp4',
               id: 'background',
               autoplay: true,
               loop: true,
               muted: true,
               poster: 'Stars.jpg'
            )
            %>
            <div id="background"></div>

          

          
          <%= yield %>
          
          <%= render "shared/application_footer" %>
          
          <%= alerts %>
          
        </div>
      </div>
    </div>
  </body>
</html>

<!-- poster: 'Northernlights.jpg' -->
